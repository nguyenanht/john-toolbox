{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "()" : "color_formatter.ColoredFormatter",
            "format":  "%(levelname)s - %(name)s - %(funcName)s:%(lineno)d â€” %(message)s",
            "datefmt": "%Y-%m-%dT%H:%M:%SZ"
        }
    },
        "handlers": {
        "console": {
            "class": "logging.StreamHandler",
            "level": "DEBUG",
            "formatter": "simple",
            "stream": "ext://sys.stdout"
        }
    },
    "root": {
        "level": "INFO",
        "handlers": ["console"]
    }
}
